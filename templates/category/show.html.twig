{% extends 'base.html.twig' %}
{% import 'category/_category_breadcrumb.html.twig' as breadcrumb %}

{% block title %}{{ category.title }} - {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    {{ breadcrumb.categoryBreadcrumb(category) }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            {% if false == category.hasChildren %}
                {{ include('category/_posts_list.html.twig') }}
            {% else %}
                {{ include('category/_categories_list.html.twig') }}
            {% endif %}
        </div>
    </div>
{% endblock %}
