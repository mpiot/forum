{% extends 'base.html.twig' %}

{% block title %}{{ category.title }} - {{ parent() }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="card mb-3">
                <div class="card-header">
                    {{ category.title }}<br>
                    {{ category.description }}
                </div>
                <ul class="list-group list-group-flush">
                    {% for post in 1..10 %}
                        <li class="list-group-item">Post {{ post }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
