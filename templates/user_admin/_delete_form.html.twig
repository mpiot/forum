<form class="d-inline" method="post" action="{{ path('user_admin_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">

    <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
        {% block buttons %}
            <button class="btn btn-danger" {{ user == app.user ? 'disabled' }}>
                <i class="fas fa-trash-alt"></i> Delete
            </button>
        {% endblock %}
    </div>
</form>
