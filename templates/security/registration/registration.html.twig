{% extends 'base.html.twig' %}

{% block title %}Registration{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item"><a href="{{ path('login') }}">Login</a></li>
    <li class="breadcrumb-item active">Registration</li>
{% endblock %}

{% block body %}
    <h1>Registration</h1>

    {{ form_start(form) }}
        {{ form_row(form.pseudo) }}
        {{ form_row(form.email) }}
        {{ form_row(form.plainPassword) }}
        {{ form_rest(form) }}

        <button class="btn">{{ button_label|default('Register') }}</button>
    {{ form_end(form) }}

{% endblock %}
