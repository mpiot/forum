{% extends 'base.html.twig' %}

{% block title %}Edit my profile{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item active"><a href="{{ path('profile_show') }}">My profile</a></li>
    <li class="breadcrumb-item">Edit</li>
{% endblock %}

{% block body %}
    <h1>Edit my profile</h1>

    {{ form_start(form) }}
        {{ form_row(form.pseudo) }}
        {{ form_row(form.email) }}
        {{ form_rest(form) }}

        <button class="btn">Edit my profile</button>
    {{ form_end(form) }}

{% endblock %}
